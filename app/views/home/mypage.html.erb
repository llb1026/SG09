<div id="wrapper">
    <div class="inner">
        
        <h2 style="text-align: center;">&laquo; My Page &raquo;</h2>

        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Content</th>
                    <th colspan="2"></th>
                </tr>
            </thead>
        
          <tbody>
          <% @posts.each do |p| %>
            <tr>
              <td><%= p.title %></td>
              <td><%= p.content %></td>
        
            </tr>
          <% end %>
        </tbody>
        </table>
        
        <table>
            <thead>
                <tr>
                    <th>Account</th>
                    <th>Product Options</th>
                    <th>Contact</th>
                    <th colspan="3"></th>
                </tr>
            </thead>
        
          <tbody>
          <% @replies.each do |r| %>
            <tr>
              <td><%= r.options %></td>
              <td><%= r.bank_account %></td>
              <td><%= r.phone %></td>
            </tr>
          <% end %>
        </tbody>
        </table>

        
    </div>
</div>